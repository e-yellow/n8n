# === Conexión a PostgreSQL (Heroku RDS o cualquier host externo) ===
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=tu-host-postgres.rds.amazonaws.com
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=nombre_de_tu_base
DB_POSTGRESDB_USER=usuario
DB_POSTGRESDB_PASSWORD=clave
DB_POSTGRESDB_SCHEMA=public
DB_POSTGRESDB_SSL_REJECT_UNAUTHORIZED=false

# === Autenticación básica para acceder a n8n ===
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# === Clave de cifrado de datos sensibles (¡muy importante!) ===
# Puedes generarla con: openssl rand -hex 32
N8N_ENCRYPTION_KEY=TU_CLAVE_SECRETA_AQUI

# === Zona horaria recomendada para Colombia ===
GENERIC_TIMEZONE=America/Bogota
TZ=America/Bogota
